@model IEnumerable<Progetto_Settimanale_Gestionale_Hotel.Models.Cliente>

@if (User.IsInRole("Admin") || User.IsInRole("Manager"))
{
    <a href="@Url.Action("Create")" class="btn btn-primary mb-3">Aggiungi Cliente</a>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Email</th>
            <th>Telefono</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nome</td>
                <td>@cliente.Cognome</td>
                <td>@cliente.Email</td>
                <td>@cliente.Telefono</td>
                <td>
                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                    {
                        <a href="@Url.Action("Edit", new { id = cliente.ClienteId })" class="btn btn-warning btn-sm">Modifica</a>
                        <a href="@Url.Action("Delete", new { id = cliente.ClienteId })" class="btn btn-danger btn-sm">Elimina</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
